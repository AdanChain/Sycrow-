{
  "compilerOptions": {
      "lib": [
          "es5",
          "es6",
          "es2017",
          "es2020",
          "dom"
      ],
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": false,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "downlevelIteration": true,
      "skipLibCheck": true,
      "types": [
          "jest", "node"
      ],
      "typeRoots": [
          "./src/@types/*",
          "./node_modules/@types"
      ]
  },
  "ts-node": {
      "files": true
  },
  "include": [
      "src/**/*",
      "src/service/test/**/*"
  ]
}